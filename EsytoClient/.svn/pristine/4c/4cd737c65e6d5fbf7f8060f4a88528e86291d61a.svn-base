<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@android:id/tabhost">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView style="@style/textview_gray"
                android:textSize="16dp"
                android:text="收入（元）"/>
            <TextView 
                android:id="@+id/tv_money"
                style="@style/textview_pink"
                android:textSize="24dp"
                android:layout_marginTop="24dp"
            	android:text="0.00"/>
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView style="@style/textview_gray"
                android:textSize="16dp"
                android:text="交易数（笔）"/>
            <TextView 
                android:id="@+id/tv_count"
                style="@style/textview_pink"
                android:textSize="24dp"
                android:layout_marginTop="26dp"
            	android:text="0"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/report_margin"
        android:layout_marginRight="@dimen/report_margin"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/tv_begin_date"
            style="@style/textview_gray_style14"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/calendar_icon"
        	android:text="2015-10-1"/>
        <View 
            android:layout_width="8dp"
            android:layout_height="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_gravity="center_vertical"
            android:background="@color/line_gray"/>
        <TextView 
            android:id="@+id/tv_end_date"
            style="@style/textview_gray_style14"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/calendar_icon"
        	android:text="2015-10-1"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/report_margin"
        android:layout_marginRight="@dimen/report_margin"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/tv_staff_name"
            style="@style/textview_gray_style14"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/unfold_icon"
        	android:text="员工姓名"/>
        <View 
            android:layout_width="8dp"
            android:layout_height="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_gravity="center_vertical"
            android:background="@null"/>
        <TextView 
            android:id="@+id/tv_pay_name"
            style="@style/textview_gray_style14"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/unfold_icon"
        	android:text="收款方式"/>
    </LinearLayout>
    
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/report_margin"
        android:layout_marginRight="@dimen/report_margin"
        android:background="@color/report_purple">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:layout_marginTop="0.7dp"
        android:layout_marginLeft="0.7dp"
        android:layout_marginRight="0.7dp"
        android:layout_marginBottom="0.7dp"
        android:background="@color/white"
        android:orientation="horizontal">
       
        <RelativeLayout 
            android:id="@+id/rl_tab_right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent">
            <TextView 
                android:id="@+id/tv_baobiao"
                style="@style/textview_gray"
                android:textSize="16dp"
                android:text="报表"
                android:layout_centerInParent="true"/>
            <ImageView 
                android:id="@+id/iv_baobiao_buttom"
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:src="@null"/>
        </RelativeLayout> 
        <RelativeLayout 
            android:id="@+id/rl_tab_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/report_purple"
            android:layout_height="fill_parent">
            <TextView 
                android:id="@+id/tv_mingxi"
                style="@style/textview_black"
                android:text="明细"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@android:id/tabcontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <TabWidget
        android:id="@android:id/tabs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="gone" >
    </TabWidget>
</LinearLayout>
</TabHost>