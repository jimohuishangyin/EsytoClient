<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:client="http://schemas.android.com/apk/res/com.ec2.yspay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/ll_main">
    <com.ec2.yspay.widget.MyTitle 
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        client:isShowLeft="true"
        client:titleName="新增门店"/>
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout 
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:padding="22dp"
	    android:orientation="vertical">
	    <TextView 
	        style="@style/textview_black1"
	        android:layout_marginTop="8dp"
	        android:text="门店/部门"/>
        <EditText 
            android:id="@+id/et_shop_name"
	        android:layout_marginTop="8dp"
	        android:singleLine="true"
	        android:hint="请输入新增门店名称"
	        style="@style/edittext114_style"/>
        <TextView 
	        style="@style/textview_black1"
	        android:layout_marginTop="16dp"
	        android:text="地区"/>
        <TextView 
            android:id="@+id/tv_shop_city"
	        android:layout_marginTop="8dp"
	        android:text="请选择地区"
	        android:singleLine="true"
	        android:ellipsize="end"
	        style="@style/dropright_menu114"/>
        <TextView 
	        style="@style/textview_black1"
	        android:layout_marginTop="16dp"
	        android:text="位置"/>
        <EditText 
            android:id="@+id/et_shop_address"
	        android:layout_marginTop="8dp"
	        android:hint="请输入门店所在位置"
	        android:singleLine="true"
	        style="@style/edittext114_style"/>
        <TextView 
	        style="@style/textview_black1"
	        android:layout_marginTop="16dp"
	        android:text="联系电话"/>
        <EditText 
            android:id="@+id/et_shop_phone"
	        android:layout_marginTop="8dp"
	        android:hint="请输入门店联系电话"
	        android:inputType="number"
	        android:maxLength="11"
	        style="@style/edittext114_style"/>
        <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent">
	        <LinearLayout 
	            android:id="@+id/ll_buttom"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:orientation="vertical">
	            <Button 
	                android:id="@+id/btn_addstaff"
	                style="@style/btn_red636_style"
	                android:layout_marginTop="42dp"
	                android:text="保存"/>
	        </LinearLayout>
	        
	    </RelativeLayout>
    </LinearLayout>
    </ScrollView>
    
</LinearLayout>
