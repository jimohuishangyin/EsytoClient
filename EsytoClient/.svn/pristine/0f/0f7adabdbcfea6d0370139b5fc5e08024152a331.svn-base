<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_number"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button 
            android:id="@+id/btn_seven"
            style="@style/btn_calculator_style"
            android:text="7"/>
        <ImageView 
	        android:layout_width="@dimen/calculator_line_width"
	        android:layout_height="fill_parent"
	        android:src="@color/cal_line"/>
        <Button 
            android:id="@+id/btn_eight"
            style="@style/btn_calculator_style"
            android:text="8"/>
        <ImageView 
	        android:layout_width="@dimen/calculator_line_width"
	        android:layout_height="fill_parent"
	        android:src="@color/cal_line"/>
        <Button 
            android:id="@+id/btn_night"
            style="@style/btn_calculator_style"
            android:text="9"/>
        <ImageView 
	        android:layout_width="@dimen/calculator_line_width"
	        android:layout_height="fill_parent"
	        android:src="@color/cal_line"/>
        <ImageButton 
            android:id="@+id/btn_del_one"
            style="@style/btn_calculator_gray_style"
            android:src="@drawable/btn_del"/>
    </LinearLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/calculator_line_width"
        android:src="@color/cal_line"/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button 
            android:id="@+id/btn_four"
            style="@style/btn_calculator_style"
            android:text="4"/>
        <ImageView 
	        android:layout_width="@dimen/calculator_line_width"
	        android:layout_height="fill_parent"
	        android:src="@color/cal_line"/>
        <Button 
            android:id="@+id/btn_five"
            style="@style/btn_calculator_style"
            android:text="5"/>
        <ImageView 
	        android:layout_width="@dimen/calculator_line_width"
	        android:layout_height="fill_parent"
	        android:src="@color/cal_line"/>
        <Button 
            android:id="@+id/btn_six"
            style="@style/btn_calculator_style"
            android:text="6"/>
        <ImageView 
	        android:layout_width="@dimen/calculator_line_width"
	        android:layout_height="fill_parent"
	        android:src="@color/cal_line"/>
        <Button 
            android:id="@+id/btn_clear"
            style="@style/btn_calculator_gray_style"
            android:textSize="24dp"
            android:text="清除"/>
    </LinearLayout>
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/calculator_line_width"
        android:src="@color/cal_line"/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">
  	    <LinearLayout 
  	        android:layout_width="0dp"
  	        android:layout_height="fill_parent"
  	        android:layout_weight="3"
  	        android:orientation="vertical">
  	        <LinearLayout 
	  	        android:layout_width="fill_parent"
	  	        android:layout_height="0dp"
	  	        android:layout_weight="1"
	  	        android:orientation="horizontal">
	  	        <Button 
	  	            android:id="@+id/btn_one"
	  	            style="@style/btn_calculator_style"
	  	            android:text="1"/>
	  	        <ImageView 
		  	        android:layout_width="@dimen/calculator_line_width"
		  	        android:layout_height="fill_parent"
		  	        android:src="@color/cal_line"/>
	  	        <Button 
	  	            android:id="@+id/btn_two"
	  	            style="@style/btn_calculator_style"
	  	            android:text="2"/>
	  	        <ImageView 
		  	        android:layout_width="@dimen/calculator_line_width"
		  	        android:layout_height="fill_parent"
		  	        android:src="@color/cal_line"/>
	  	        <Button 
	  	            android:id="@+id/btn_three"
	  	            style="@style/btn_calculator_style"
	  	            android:text="3"/>
	  	        <ImageView 
		  	        android:layout_width="@dimen/calculator_line_width"
		  	        android:layout_height="fill_parent"
		  	        android:src="@color/cal_line"/>
	  	        
	  	    </LinearLayout>
	  	    <ImageView 
	  	        android:layout_width="fill_parent"
	  	        android:layout_height="@dimen/calculator_line_width"
	  	        android:src="@color/cal_line"/>
	  	    <LinearLayout 
	  	        android:layout_width="fill_parent"
	  	        android:layout_height="0dp"
	  	        android:layout_weight="1"
	  	        android:orientation="horizontal">
	  	        <Button 
	  	            android:id="@+id/btn_zero"
	  	            style="@style/btn_calculator_style"
	  	            android:text="0"/>
	  	        <ImageView 
		  	        android:layout_width="@dimen/calculator_line_width"
		  	        android:layout_height="fill_parent"
		  	        android:src="@color/cal_line"/>
	  	        <Button 
	  	            android:id="@+id/btn_point"
	  	            style="@style/btn_calculator_style"
	  	            android:text="."/>
	  	        <ImageView 
		  	        android:layout_width="@dimen/calculator_line_width"
		  	        android:layout_height="fill_parent"
		  	        android:src="@color/cal_line"/>
	  	        <Button 
	  	            android:id="@+id/btn_plus"
	  	            style="@style/btn_calculator_style"
	  	            android:text="+"/>
	  	        <ImageView 
		  	        android:layout_width="@dimen/calculator_line_width"
		  	        android:layout_height="fill_parent"
		  	        android:src="@color/cal_line"/>
	  	    </LinearLayout>
  	    </LinearLayout>
  	    <Button 
  	        android:id="@+id/btn_equal"
	  	    style="@style/btn_calculator_style"
	  	    android:background="@drawable/btn_red_sub"
	  	    android:layout_width="0dp"
 	        android:layout_weight="1"
 	        android:visibility="gone"
 	        android:layout_height="fill_parent"
 	        android:textColor="@color/white"
	  	    android:text="="
 	        />
  	    <RelativeLayout 
  	        android:id="@+id/btn_cal"
  	        android:layout_width="0dp"
 	            android:layout_weight="1"
 	            android:layout_height="fill_parent"
 	            android:background="@drawable/btn_red_sub">
  	        <LinearLayout 
	  	        android:layout_width="wrap_content"
  	            android:layout_height="wrap_content"
  	            android:layout_centerInParent="true"
  	            android:orientation="vertical"
  	            android:gravity="center_horizontal">
	  	        <TextView 
	  	            android:layout_width="wrap_content"
	  	            android:layout_height="wrap_content"
	  	            android:ems="1"
	  	            android:textColor="@color/white"
	  	            android:textSize="24dp"
	  	            android:paddingLeft="2dp"
	  	            android:text="收款"/> 
	  	        
	  	    </LinearLayout>
  	    </RelativeLayout>
  	    
 	</LinearLayout>
 	    
</LinearLayout>
