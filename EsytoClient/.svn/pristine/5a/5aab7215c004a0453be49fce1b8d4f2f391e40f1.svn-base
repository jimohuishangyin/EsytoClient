<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:client="http://schemas.android.com/apk/res/com.ec2.yspay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_main"
    android:background="@color/white">
    <com.ec2.yspay.widget.MyTitle 
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        client:isShowLeft="true"
        client:titleName="门店管理"/>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:background="#eeeeee">
        <LinearLayout 
            android:id="@+id/ll_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:orientation="horizontal">
            <com.ec2.yspay.widget.RoundImageViewNoBorder
	            android:id="@+id/iv_logo"
		        android:layout_width="90dp"
		        android:layout_height="90dp"
		        android:layout_centerInParent="true"
	        	android:src="@drawable/company_default_logo" 
	            client:borderRadius="6dp"
	            client:type="round" >
	        </com.ec2.yspay.widget.RoundImageViewNoBorder>
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">
                <TextView 
                    android:id="@+id/tv_shopname"
                    style="@style/textview_black1"
                    android:text=""/>
                <TextView 
                    android:id="@+id/tv_shopaddress"
                    style="@style/textview_black2"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>
        
        
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="16dp"
        android:paddingRight="12dp"
        android:paddingTop="20dp"
        android:paddingBottom="15dp"
        android:background="@color/white">
        
        <TextView android:id="@+id/tv_top"
            style="@style/textview_black1"
            android:text="我的员工"/>
        <LinearLayout 
            android:id="@+id/ll_buttom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">
            <com.ec2.yspay.widget.ButtonRedCenter
                android:id="@+id/btn_add_staff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                client:btnContent="添加新员工"/>
            <Button
                android:id="@+id/btn_del_store"
                style="@style/btn_white636_style"
                android:layout_marginTop="12dp"
                android:text="删除门店"/>
        </LinearLayout>
        <ListView 
	        android:id="@+id/lv_storelist"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:cacheColorHint="#00000000"
	        android:divider="@color/line_gray"
	        android:layout_above="@id/ll_buttom"
	        android:layout_below="@id/tv_top"
	        android:dividerHeight="0.5dp"/>
    </RelativeLayout>
</LinearLayout>