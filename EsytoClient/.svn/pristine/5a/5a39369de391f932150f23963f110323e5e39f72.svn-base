<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:client="http://schemas.android.com/apk/res/com.ec2.yspay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/ll_main">
    <com.ec2.yspay.widget.MyTitle 
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        client:isShowLeft="true"
        client:titleName="添加员工"/>
    	<LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:gravity="center_vertical"
	        android:paddingLeft="14dp"
	        android:paddingRight="14dp"
	        android:orientation="horizontal">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="门店"/>
	        <TextView 
	            android:id="@+id/tv_shop_name"
	            style="@style/textview_black1"
	            android:layout_width="fill_parent"
	            android:gravity="right"
	            android:singleLine="true"
	            android:text=""/>
	    </LinearLayout>
	    <include layout="@layout/layout_gray_view"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:gravity="center_vertical"
	        android:paddingLeft="14dp"
	        android:paddingRight="14dp"
	        android:orientation="horizontal">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="姓名"/>
	        <EditText 
	            android:id="@+id/et_name"
	            style="@style/textview_black1"
	            android:layout_width="fill_parent"
	            android:singleLine="true"
	            android:hint="请输入员工姓名"
	            android:background="@null"
	            android:textColorHint="@color/black_3"
	            android:text=""/>
	    </LinearLayout>
	    <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:gravity="center_vertical"
	        android:paddingLeft="14dp"
	        android:paddingRight="14dp"
	        android:orientation="horizontal">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="手机号码"/>
	        <EditText 
	            android:id="@+id/et_num"
	            style="@style/textview_black1"
	            android:layout_width="fill_parent"
	            android:singleLine="true"
	            android:background="@null"
	            android:textColorHint="@color/black_3"
	            android:inputType="number"
	            android:hint="请输入手机号码"
	            android:text=""/>
	    </LinearLayout>
	    <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:gravity="center_vertical"
	        android:paddingLeft="14dp"
	        android:paddingRight="14dp"
	        android:orientation="horizontal">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="员工类型"/>
	        <RadioGroup
	            android:id="@+id/rg_duty"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	            <RadioButton 
	                android:id="@+id/rb_duty_staff"
	                android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:checked="true"
	                android:text="员工"/>
	            <RadioButton 
	                android:id="@+id/rb_duty_manager"
	                android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:layout_marginLeft="15dp"
	            	android:visibility="gone"
	                android:text="主管"/>
	        </RadioGroup>
	    </LinearLayout>
	    <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>"
    	<Button 
             android:id="@+id/btn_addstaff_send"
             style="@style/btn_red636_style"
             android:layout_marginTop="46dp"
             android:layout_gravity="center_horizontal"
             android:text="保存"/>
    
    
</LinearLayout>
