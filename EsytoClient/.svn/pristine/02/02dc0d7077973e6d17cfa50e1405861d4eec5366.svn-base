<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:client="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#e9e9e9"
    android:id="@+id/ll_main">
    <com.ec2.yspay.widget.MyTitle 
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        client:isShowLeft="true"
        client:titleName="个人信息设置"/>
    <ScrollView 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	        
	    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="143dp"
        android:orientation="horizontal"
        android:background="#eeeeee">
        <com.ec2.yspay.widget.HalfRoundImageView
	        android:id="@+id/iv_touxiang"
	        android:layout_width="94dp"
	        android:layout_height="94dp"
	        android:src="@drawable/default_portrait"
	        android:layout_centerInParent="true"
            android:layout_centerVertical="true"
	        client:border_outside_color="@color/red_type1"
	        client:border_thickness="4dp" />
        
    </RelativeLayout>
    <LinearLayout 
        android:id="@+id/collect_ordermsg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_left"
        android:paddingRight="24dp">
        <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:gravity="center_vertical"
	        android:orientation="horizontal">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="昵称"/>
	        <TextView 
	            android:id="@+id/tv_user_nickname"
	            style="@style/textview_personal_style"
	            android:text=""/>
	    </LinearLayout>
	    <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:gravity="center_vertical"
	        android:orientation="horizontal">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="姓名"/>
	        <TextView 
	            android:id="@+id/tv_user_name"
	            style="@style/textview_personal_style"
	            android:text=""/>
	    </LinearLayout>
	    <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:gravity="center_vertical"
	        android:orientation="horizontal">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="手机号"/>
	        <TextView 
	            android:id="@+id/tv_user_num"
	            style="@style/textview_black1"
	            android:text=""/>
	    </LinearLayout>
	    <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:gravity="center_vertical"
	        android:orientation="horizontal">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="二维码名片"/>
	        <ImageView 
	            android:id="@+id/iv_ewm"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/ewm_72_72"/>
	    </LinearLayout>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:orientation="vertical"
	        android:background="@color/white"
	        android:paddingLeft="@dimen/margin_left"
	        android:layout_marginTop="8dp"
	        android:paddingRight="24dp">
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="48dp"
		        android:gravity="center_vertical"
		        android:orientation="horizontal">
		        <TextView 
		            style="@style/textview_gray"
		            android:layout_width="120dp"
		            android:textSize="16dp"
		            android:text="性别"/>
		        <TextView 
		            android:id="@+id/tv_user_sex"
		            style="@style/textview_personal_style"
		            android:text=""/>
		    </LinearLayout>
		    <View 
	            android:layout_width="fill_parent"
	            android:layout_height="0.5dp"
	            android:background="@color/line_gray"/>
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="48dp"
		        android:gravity="center_vertical"
		        android:orientation="horizontal">
		        <TextView 
		            style="@style/textview_gray"
		            android:layout_width="120dp"
		            android:textSize="16dp"
		            android:text="家乡"/>
		        <TextView 
		            android:id="@+id/tv_user_home_addr"
		            style="@style/textview_personal_style"
		            android:layout_height="wrap_content"
		            android:text=""/>
		    </LinearLayout>
		    <View 
	            android:layout_width="fill_parent"
	            android:layout_height="0.5dp"
	            android:background="@color/line_gray"/>
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="48dp"
		        android:gravity="center_vertical"
		        android:orientation="horizontal">
		        <TextView 
		            style="@style/textview_gray"
		            android:layout_width="120dp"
		            android:textSize="16dp"
		            android:text="生日"/>
		        <TextView 
		            android:id="@+id/tv_user_birthday"
		            style="@style/textview_personal_style"
		            android:text=""/>
		    </LinearLayout>
	    
	    
    </LinearLayout>
   
	   
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_left"
        android:paddingRight="24dp"
        android:layout_marginTop="8dp">
        <RelativeLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_centerVertical="true">
            <TextView 
                style="@style/textview_gray"
                android:layout_centerVertical="true"
                android:textSize="16dp"
                android:text="重设密码"/>
            <Button 
                android:id="@+id/btn_update_pwd"
                android:layout_width="49dp"
                android:layout_height="26dp"
                android:background="@drawable/guiji_btn"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:padding="0dp"
                android:textSize="14dp"
                android:layout_margin="0dp"
                android:text="重设"/>
        </RelativeLayout>
    </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
