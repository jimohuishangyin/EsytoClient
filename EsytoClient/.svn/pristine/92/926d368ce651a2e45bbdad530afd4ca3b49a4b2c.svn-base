<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

	<RelativeLayout 
	    android:id="@+id/ll_state_normal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingLeft="14dp"
	    android:paddingTop="15dp"
	    android:visibility="visible"
	    android:paddingBottom="15dp"
	    android:paddingRight="10dp">
	    <ImageView 
	        android:id="@+id/iv_payicon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:src="@drawable/weixin_icon_72px"/>
	    
		<TextView 
		    android:id="@+id/tv_payname"
	        style="@style/textview_black"
	        android:layout_width="wrap_content"
	        android:textSize="14dp"
	        android:minWidth="56dp"
	        android:layout_marginLeft="10dp"
	        android:layout_toRightOf="@id/iv_payicon"
	        android:layout_centerVertical="true"
	        android:text="微信支付"/>
	    <TextView 
	        android:id="@+id/tv_money"
	        style="@style/textview_gray"
	        android:textColor="@color/black_3"
	        android:layout_width="@dimen/report_money_width"
	        android:gravity="right"
	        android:textSize="14dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:ellipsize="end" 
	        android:singleLine="true"
	        android:padding="0dp"
	        android:marqueeRepeatLimit="marquee_forever" 
        	android:scrollHorizontally="true"
	        android:text="1111111.00元"/>
	    <TextView
	        android:id="@+id/tv_orderid"
	        style="@style/textview_black"
	        android:layout_width="fill_parent"
	        android:layout_toLeftOf="@id/tv_money"
	        android:layout_toRightOf="@id/tv_payname"
	        android:ellipsize="end"
	        android:textSize="14dp"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="7dp"
	        android:layout_marginRight="5dp"
	        android:singleLine="true"
	        android:paddingRight="0dp"
	        android:text="201510210000000601"/>
	</RelativeLayout>
	<LinearLayout 
	    android:id="@+id/ll_state_loading"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:paddingLeft="15dp"
	    android:paddingTop="15dp"
	    android:paddingBottom="15dp"
	    android:visibility="gone"
	    android:gravity="center_vertical"
	    android:paddingRight="4dp">
	    <ProgressBar 
	        android:layout_width="wrap_content" 
	      android:layout_height="wrap_content"
	      android:layout_marginLeft="15dp"
	      style="?android:attr/progressBarStyleSmall"/>
		<TextView 
	        style="@style/textview_black"
	        android:textSize="14dp"
	        android:layout_marginLeft="6dp"
	        android:text="加载中..."/>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/ll_state_nodata"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:paddingLeft="15dp"
	    android:paddingTop="15dp"
	    android:visibility="gone"
	    android:paddingBottom="15dp"
	    android:gravity="center_vertical"
	    android:paddingRight="4dp">
		<TextView 
	        style="@style/textview_black"
	        android:textSize="14dp"
	        android:layout_marginLeft="16dp"
	        android:text="无数据"/>
	</LinearLayout>
	<ImageView
	        android:layout_width="fill_parent"
	        android:layout_marginLeft="14dp"
	        android:layout_marginRight="10dp"
	        android:layout_height="0.4dp"
	        android:src="@color/line_gray"/>
    
</LinearLayout>
