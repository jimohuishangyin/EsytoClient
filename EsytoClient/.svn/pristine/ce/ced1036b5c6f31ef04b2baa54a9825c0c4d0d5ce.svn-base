<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@android:color/white"
    android:orientation="vertical" >
    

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            >
            
            <TextView
                android:id="@+id/day_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12-09"
                android:textColor="@color/black_1"
                android:textSize="16sp" />
            
            <TextView
                android:id="@+id/hourandmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="19:00"
                android:textColor="@color/black_3"
                android:textSize="16sp" />

        </LinearLayout>
		
        <RelativeLayout
            android:id="@+id/pay"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/time"
            >
        <ImageView
            android:id="@+id/payment_imageview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/zfb_logo96" />

        <TextView
            android:id="@+id/payment_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/payment_imageview"
            android:paddingTop="10dp"
            android:paddingBottom="8dp"
            android:paddingLeft="5dp"
            android:text="银行支付"
            android:textColor="@color/black_1"
            android:textSize="18sp" />
        </RelativeLayout>
        
        <TextView
            android:id="@+id/ordertextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/pay"
            android:paddingTop="10dp"
            android:text="收款"
            android:textColor="@color/black_1"
            android:textSize="18sp" />
        
        <TextView
            android:id="@+id/money_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:paddingTop="10dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:singleLine="true"  
            android:layout_marginLeft="20dp"
            android:text="120000.00"
            android:textColor="@color/black_1"
            android:maxEms="5"  
			android:ellipsize="end"  
            android:textSize="18sp" />
        
    </RelativeLayout>

</LinearLayout>