<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:client="http://schemas.android.com/apk/res/com.ec2.yspay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
	<com.ec2.yspay.widget.MyTitle 
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        client:isShowLeft="true"
        client:titleName="关于我们"/>
	<ImageView android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="32dp"
	    android:src="@drawable/icon_app_about_us"/>
	<TextView 
	    android:id="@+id/tv_version"
	    style="@style/textview_black2"
	    android:layout_marginTop="8dp"
	    android:text="当前版本 1.01"/>
	<View style="@style/menu_line_system" 
	    android:layout_height="0.5dp"
	    android:layout_marginTop="32dp"/>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/white"
	    android:paddingLeft="22dp"
	    android:paddingRight="22dp"
	    android:orientation="vertical">
	    
	    <RelativeLayout 
	        android:id="@+id/rv_check_update"
	        android:layout_width="fill_parent"
	        android:layout_height="48dp">
	        <TextView 
	            android:id="@+id/tv_update"
	            style="@style/textview_black1"
	            android:layout_centerVertical="true"
	            android:text="检查更新"/>
	        <Button 
	            android:id="@+id/bt_new_version"
	            android:layout_width="wrap_content"
	            android:layout_height="24dp"
	            android:textColor="@color/white"
	            android:textSize="16dp"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="20dp"
	            android:layout_toRightOf="@+id/tv_update"
	            android:paddingTop="0dp"
	            android:paddingBottom="0dp"
	            android:paddingLeft="1dp"
	            android:paddingRight="1dp"
	            android:text="New"
	            android:background="@drawable/new_icon"
	            />
	        <TextView 
	            android:id="@+id/tv_version_num"
	            style="@style/textview_black3"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:drawablePadding="8dp"
	            android:drawableRight="@drawable/right_icon"
	            android:text="1.0.2"/>
	    </RelativeLayout>
	    <ImageView android:layout_width="fill_parent"
		    android:layout_height="0.5dp"
		    android:src="@color/line_gray"/>
	    <RelativeLayout 
	        android:id="@+id/rl_kefu"
	        android:layout_width="fill_parent"
	        android:layout_height="48dp">
	        <TextView style="@style/textview_black1"
	            android:layout_centerVertical="true"
	            android:text="客服热线"/>
	        <TextView 
	            style="@style/textview_black3"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:drawablePadding="8dp"
	            android:text="4001-800800"
	            android:drawableRight="@drawable/right_icon"/>
	    </RelativeLayout>
	    <ImageView android:layout_width="fill_parent"
		    android:layout_height="0.5dp"
		    android:src="@color/line_gray"/>
	    <RelativeLayout 
	        android:id="@+id/rl_about_clean"
	        android:layout_width="fill_parent"
	        android:layout_height="48dp">
	        <TextView style="@style/textview_black1"
	            android:layout_centerVertical="true"
	            android:text="清空缓存"/>
	        <TextView 
	            android:id="@+id/tv_huancun"
	            style="@style/textview_black3"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:drawablePadding="8dp"
	            android:drawableRight="@drawable/right_icon"
	            android:text="145.23K"/>
	    </RelativeLayout>
	</LinearLayout>
	<View style="@style/menu_line_system" 
	    android:layout_height="0.5dp"/>
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	    <TextView 
	        android:id="@+id/tv_copyright"
	        style="@style/textview_black2"
	        android:textSize="12dp"
	        android:layout_alignParentBottom="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginBottom="26dp"
	        android:text="Copyright © 厦门银联商务"/>
	    <TextView 
	        style="@style/textview_black2"
	        android:textSize="12dp"
	        android:layout_above="@id/tv_copyright"
	        android:layout_centerHorizontal="true"
	        android:layout_marginBottom="10dp"
	        android:text="深圳市易商云电子商务有限公司 技术支持"/>
	</RelativeLayout>
</LinearLayout>