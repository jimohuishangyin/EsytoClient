<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:client="http://schemas.android.com/apk/res/com.ec2.yspay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/ll_main">
    <com.ec2.yspay.widget.MyTitle 
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        client:isShowLeft="true"
        client:titleName="添加新员工"/>
    <LinearLayout 
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:padding="22dp"
	    android:orientation="vertical">
	    <TextView 
	        style="@style/textview_black1"
	        android:layout_marginTop="8dp"
	        android:text="门店/部门"/>
        <TextView 
            android:id="@+id/tv_shop_name"
	        android:layout_marginTop="8dp"
	        android:text="请选择门店"
	        style="@style/dropdown_menu114"/>
        <TextView 
	        style="@style/textview_black1"
	        android:layout_marginTop="16dp"
	        android:text="手机号码"/>
        <EditText 
            android:id="@+id/et_num"
	        android:layout_marginTop="8dp"
	        android:hint="请输入手机号"
	        android:inputType="number"
	        android:maxLength="11"
	        style="@style/edittext114_style"/>
        <TextView 
            
	        style="@style/textview_black1"
	        android:layout_marginTop="16dp"
	        android:text="姓名"/>
        <EditText 
            android:id="@+id/et_name"
	        android:layout_marginTop="8dp"
	        android:hint="请输入真实姓名"
	        android:maxLength="8"
	        style="@style/edittext114_style"/>
        <TextView 
	        style="@style/textview_black1"
	        android:layout_marginTop="16dp"
	        android:text="员工类型"/>
        <TextView 
            android:id="@+id/tv_duty"
	        android:layout_marginTop="8dp"
	        android:text="请选择员工类型"
	        style="@style/dropdown_menu114"/>
        <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent">
	        <LinearLayout 
	            android:id="@+id/ll_buttom"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:orientation="vertical">
	            <Button 
	                android:id="@+id/btn_addstaff"
	                style="@style/btn_red636_style"
	                android:layout_marginTop="12dp"
	                android:visibility="gone"
	                android:text="立即添加"/>
	            <Button 
	                android:id="@+id/btn_addstaff_send"
	                style="@style/btn_red636_style"
	                android:layout_marginTop="16dp"
	                android:text="保存"/>
	        </LinearLayout>
	        
	    </RelativeLayout>
    </LinearLayout>
    
    
</LinearLayout>
