<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:client="http://schemas.android.com/apk/res/com.ec2.yspay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
	<com.ec2.yspay.widget.MyTitle 
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        client:isShowLeft="true"
        client:titleName="限额查询"/>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_marginTop="20dp"
	    android:layout_margin="@dimen/margin_left"
	    android:orientation="vertical">
	    <RelativeLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content">
		    <TextView 
		        style="@style/textview_black"
		        android:layout_centerVertical="true"
		        android:text="银行卡限额"/>
		    <LinearLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:orientation="horizontal">
		        <TextView 
		            android:id="@+id/tv_limit_card_day"
		            style="@style/textview_pink"
		            android:textSize="16dp"
		            android:text="--"/>
		        <TextView 
		            android:id="@+id/tv_limit_card_month"
		            style="@style/textview_gray"
		            android:textSize="17dp"
		            android:text="/--"/>
		    </LinearLayout>
		</RelativeLayout>
		<ImageView 
		    android:layout_width="fill_parent"
		    android:layout_height="0.3dp"
		    android:layout_marginTop="10dp"
		    android:layout_marginBottom="10dp"
		    android:src="@color/line_gray"/> 
		    <RelativeLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content">
		    <TextView 
		        style="@style/textview_black"
		        android:layout_centerVertical="true"
		        android:text="翼支付限额"/>
		    <LinearLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:orientation="horizontal">
		        <TextView 
		            android:id="@+id/tv_limit_best_day"
		            style="@style/textview_pink"
		            android:textSize="16dp"
		            android:text="--"/>
		        <TextView 
		            android:id="@+id/tv_limit_best_month"
		            style="@style/textview_gray"
		            android:textSize="17dp"
		            android:text="/--"/>
		    </LinearLayout>
		</RelativeLayout>
		<ImageView 
		    android:layout_width="fill_parent"
		    android:layout_height="0.3dp"
		    android:layout_marginTop="10dp"
		    android:layout_marginBottom="10dp"
		    android:src="@color/line_gray"/> 
		    <RelativeLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content">
		    <TextView 
		        
		        style="@style/textview_black"
		        android:layout_centerVertical="true"
		        android:text="支付宝限额"/>
		    <LinearLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:orientation="horizontal">
		        <TextView 
		            android:id="@+id/tv_limit_ali_day"
		            style="@style/textview_pink"
		            android:textSize="16dp"
		            android:text="--"/>
		        <TextView 
		            android:id="@+id/tv_limit_ali_month"
		            style="@style/textview_gray"
		            android:textSize="17dp"
		            android:text="/--"/>
		    </LinearLayout>
		</RelativeLayout>
		<ImageView 
		    android:layout_width="fill_parent"
		    android:layout_height="0.3dp"
		    android:layout_marginTop="10dp"
		    android:layout_marginBottom="10dp"
		    android:src="@color/line_gray"/> 
		    <RelativeLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content">
		    <TextView 
		        style="@style/textview_black"
		        android:layout_centerVertical="true"
		        android:text="微支付限额"/>
		    <LinearLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:orientation="horizontal">
		        <TextView 
		            android:id="@+id/tv_limit_wx_day"
		            style="@style/textview_pink"
		            android:textSize="16dp"
		            android:text="--"/>
		        <TextView 
		            android:id="@+id/tv_limit_wx_month"
		            style="@style/textview_gray"
		            android:textSize="17dp"
		            android:text="/--"/>
		    </LinearLayout>
		</RelativeLayout>
	</LinearLayout>
	
</LinearLayout>