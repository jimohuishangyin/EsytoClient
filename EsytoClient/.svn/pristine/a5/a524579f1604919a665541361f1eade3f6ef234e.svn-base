<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:client="http://schemas.android.com/apk/res/com.ec2.yspay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<com.ec2.yspay.widget.MyTitle 
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        client:isShowLeft="true"
        client:titleName="撤销与退款"/>
	<ScrollView 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	    
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:padding="@dimen/padding_parent"
	    android:background="@color/white">
	    <LinearLayout 
	        android:id="@+id/ll_ordermsg"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/pay_title"
	        android:gravity="center_vertical"
	        android:orientation="horizontal"
	        android:layout_marginTop="20dp">
	        <LinearLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        
		        android:orientation="vertical">
		        <TextView 
		            style="@style/textview_gray"
		            android:text="交易流水号"/>
		        <TextView 
		            style="@style/textview_gray"
		            android:layout_marginTop="@dimen/textgray_margin"
		            android:text="凭证号"
		            android:visibility="gone"/>
		        <TextView 
		            style="@style/textview_gray"
		            android:layout_marginTop="@dimen/textgray_margin"
		            android:text="时间"/>
		        <TextView 
		            style="@style/textview_gray"
		            android:layout_marginTop="@dimen/textgray_margin"
		            android:text="支付方式"/>
		        <TextView 
		            style="@style/textview_gray"
		            android:layout_marginTop="@dimen/textgray_margin"
		            android:visibility="gone"
		            android:text="撤销方式"/>
		    </LinearLayout>
		    <LinearLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="15dp"
		        android:orientation="vertical">
		        <TextView 
		            android:id="@+id/tv_orderid"
		            style="@style/textview_gray"
		            android:text=""/>
		        <TextView 
		            android:id="@+id/tv_voucherId"
		            style="@style/textview_gray"
		            android:layout_marginTop="@dimen/textgray_margin"
		            android:text=""
		            android:visibility="gone"/>
		        <TextView 
		            android:id="@+id/tv_orderTime"
		            style="@style/textview_gray"
		            android:layout_marginTop="@dimen/textgray_margin"
		            android:text=""/>
		        <TextView 
		            android:id="@+id/tv_channelType"
		            style="@style/textview_gray"
		            android:layout_marginTop="@dimen/textgray_margin"
		            android:text=""/>
		        <TextView 
		            style="@style/textview_gray"
		            android:layout_marginTop="@dimen/textgray_margin"
		            android:visibility="gone"
		            android:text="1001"/>
		    </LinearLayout>
	    </LinearLayout>
	    <TextView 
	        android:id="@+id/tv_amount"
	        style="@style/textview_black"
	        android:layout_marginTop="25dp"
	        android:text="退款金额        ￥0.00"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="25dp"
	        android:orientation="horizontal">
		    <ImageView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/note_black72_72"/>
	        <TextView 
		        style="@style/textview_black"
		        android:layout_marginLeft="10dp"
		        android:layout_gravity="center_vertical"
		        android:text="退款备注"/>
	        <TextView 
		        style="@style/textview_black3"
		        android:layout_gravity="bottom"
		        android:textSize="12dp"
		        android:layout_marginLeft="4dp"
		        android:layout_marginBottom="1dp"
		        android:text="(可填写商品等信息)"/>
	    </LinearLayout>
	    
	   <EditText 
	        android:id="@+id/et_refund_beizhu"
	        style="@style/editText_gray_style"
	        android:layout_height="100dp"
	        android:singleLine="false"
	        android:gravity="top"
	        android:paddingLeft="5dp"
	        android:paddingRight="5dp"
	        android:scrollbars="vertical" 
	        android:layout_marginTop="4dp"
	        android:inputType="textMultiLine"
	        android:hint=""/>
	    
	    <Button style="@style/btn_blue_big_style"
	        android:layout_marginTop="35dp"
	        android:onClick="onclick_sure"
	        android:text="确定退款"
	        android:id="@+id/btn_refund"/>
	</LinearLayout>
	</ScrollView>
</LinearLayout>