<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:client="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/ll_use_scan"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
	<com.ec2.yspay.widget.MyTitle 
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        client:isShowLeft="true"
        client:titleName="二维码展示"/>
	
    
    <RelativeLayout
        android:id="@+id/ll_yingshou"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/margin_left">
	    <TextView 
	        style="@style/textview_black2"
	        android:layout_centerVertical="true"
	        android:text="收款金额："/>
	    <TextView 
	        android:id="@+id/tv_money"
	        style="@style/textview_red_bold"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="22dp"
	        android:textSize="32dp"
	        android:text="￥153.02"/>
	</RelativeLayout>
	<View 
	    android:layout_width="fill_parent"
	    android:layout_height="14dp"
	    android:background="@color/gray_bg_color"/>
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:minHeight="100dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/iv_code"/>
	<com.ec2.yspay.widget.ButtonRedCenter
	    android:id="@+id/btn_scan"
	    client:btnContent="扫码收款"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    client:btnIcon="@drawable/saoma_zf_72_72"
	    android:layout_gravity="center_horizontal"/>
</LinearLayout>
