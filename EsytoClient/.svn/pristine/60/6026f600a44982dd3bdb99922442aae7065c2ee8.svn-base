<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:client="http://schemas.android.com/apk/res/com.ec2.yspay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <com.ec2.yspay.widget.MyTitle 
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        client:isShowLeft="true"
        client:titleName="付款"/>
    <LinearLayout 
        android:id="@+id/pay_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rl_top"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp">
        <ImageView 
            android:id="@+id/iv_payicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/weixinzf_logo96"/>
        <TextView 
            android:id="@+id/tv_paytitle"
            style="@style/textview_title_blue"
            android:text="微信支付"/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/ll_ordermsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pay_title"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginTop="20dp">
        <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        
	        android:orientation="vertical">
	        <TextView 
	            style="@style/textview_gray"
	            android:visibility="gone"
	            android:text="交易号"/>
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_marginTop="@dimen/textgray_margin"
	            android:text="收银员"/>
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_marginTop="@dimen/textgray_margin"
	            android:text="门店"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dp"
	        
	        android:orientation="vertical">
	        <TextView 
	            style="@style/textview_gray"
	            android:visibility="gone"
	            android:text="2894647"/>
	        <TextView 
	            android:id="@+id/tv_username"
	            style="@style/textview_gray"
	            android:layout_marginTop="@dimen/textgray_margin"
	            android:text=""/>
	        <TextView 
	            android:id="@+id/tv_shopname"
	            style="@style/textview_gray"
	            android:layout_marginTop="@dimen/textgray_margin"
	            android:text=""/>
	    </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/ll_yingshou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_below="@id/ll_ordermsg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
	    <TextView 
	        style="@style/textview_black"
	        android:text="应收金额"/>
	    <TextView 
	        android:id="@+id/tv_money"
	        style="@style/textview_red"
	        android:layout_marginLeft="15dp"
	        android:text="153.02"/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical"
	    android:layout_below="@id/ll_yingshou"
	    android:layout_marginTop="25dp"
	    android:layout_margin="@dimen/margin_left">
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="25dp"
	        android:orientation="horizontal">
	        <EditText 
	            android:id="@+id/et_paycode"
				style="@style/editText_gray_style"
				android:hint="请输入用户付款码"/>
	    </LinearLayout>
	    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_marginTop="45dp"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/btn_cancel"
                style="@style/text_15_666666_sdw"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_openwin_gray"
                android:gravity="center"
                android:text="@string/cancel" />
            <Button
                android:id="@+id/btn_sure"
                style="@style/text_15_ffffff_sdw"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:background="@drawable/btn_red_9"
                android:gravity="center"
                android:text="确定" />


        </LinearLayout>
	    
	</LinearLayout>
    
</RelativeLayout>
