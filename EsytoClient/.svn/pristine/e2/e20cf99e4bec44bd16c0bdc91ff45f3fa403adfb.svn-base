<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:client="http://schemas.android.com/apk/res/com.ec2.yspay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >
    
   <com.ec2.yspay.widget.MyTitle 
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        client:isShowLeft="true"
        client:titleName="订单详情"/>
    
    <ScrollView 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	    
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        
        
        	<LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical">
            
            	<TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金额"
                android:textColor="@color/black_3"
                android:textSize="14sp"/>
            
            	<TextView 
            	android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="120.00"
                android:textSize="20sp"
                android:textColor="@color/money_text_color"/>
            
            	<ImageView 
            	    
            	android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginTop="8dp"
                android:background="@color/blank_color"/>
            
            	<LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                
                	<ImageView
                	android:id="@+id/payment_imageView" 
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/zfb_logo96"/>
                
                	<TextView 
                	android:id="@+id/payment_textview"
                	android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="支付宝"
                    android:textColor="@color/black_1"
                    android:layout_gravity="center"
                    />
                
            	</LinearLayout>
            
        	</LinearLayout>
        	
        	<ImageView 
        	    android:layout_marginTop="10dp"
        	    android:layout_width="match_parent"
        	    android:layout_height="4dp"
        	    android:background="@color/blank_color"/>
        	
        	
        	<LinearLayout android:layout_width="match_parent"
        	    android:layout_height="match_parent"
        	    android:layout_marginTop="10dp"
        	    android:layout_marginLeft="15dp"
        	    android:orientation="vertical">
        	    
        	    <LinearLayout android:layout_width="match_parent"
        	        android:layout_height="wrap_content"
        	        android:layout_marginTop="5dp"
        	        android:orientation="horizontal">
        	        
        	        <TextView 
        	            style="@style/textview_order_query_detail_ds"
        	            android:text="交易流水号："
        	            />
        	        
        	        <TextView 
        	            android:id="@+id/order_id"
        	            style="@style/textview_order_query_detail_content"
        	            android:text="2015101000000000"
        	            />
        	        
        	    </LinearLayout>
        	    
        	    <ImageView android:layout_width="match_parent"
        	        android:layout_height="0.2dp"
        	        android:background="@color/blank_color"/>
        	    
        	    <LinearLayout android:layout_width="match_parent"
        	        android:layout_height="wrap_content"
        	        android:layout_marginTop="5dp"
        	        android:orientation="horizontal">
        	        
        	        <TextView 
        	            style="@style/textview_order_query_detail_ds"
        	            android:text="交易时间："
        	            />
        	        
        	        <TextView 
        	            android:id="@+id/paytime"
        	            style="@style/textview_order_query_detail_content"
        	            android:text="2015101000000000"
        	            />
        	        
        	    </LinearLayout>
        	    
        	    <ImageView android:layout_width="match_parent"
        	        android:layout_height="0.2dp"
        	        android:background="@color/blank_color"/>
        	    
        	    <LinearLayout 
        	        android:id="@+id/ruturn_back"
        	        android:layout_width="match_parent"
        	        android:layout_height="wrap_content"
        	        android:visibility="gone"
        	        android:orientation="vertical">
        	        
        	        <LinearLayout android:layout_width="match_parent"
        	        android:layout_height="wrap_content"
        	        android:layout_marginTop="5dp"
        	        android:orientation="horizontal">
        	        
        	        <TextView 
        	            style="@style/textview_order_query_detail_ds"
        	            android:text="退款时间："
        	            />
        	        
        	        <TextView 
        	            android:id="@+id/returnpaytime"
        	            style="@style/textview_order_query_detail_content"
        	            android:text="2015101000000000"
        	            />
        	        
        	    </LinearLayout>
        	    
        	    <ImageView android:layout_width="match_parent"
        	        android:layout_height="0.2dp"
        	        android:background="@color/blank_color"/>
        	        
        	    </LinearLayout>
        	    
        	    <LinearLayout android:layout_width="match_parent"
        	        android:layout_height="wrap_content"
        	        android:layout_marginTop="5dp"
        	        android:orientation="horizontal">
        	        
        	        <TextView 
        	            style="@style/textview_order_query_detail_ds"
        	            android:text="门店："
        	            />
        	        
        	        <TextView 
        	            android:id="@+id/shoptextview"
        	            style="@style/textview_order_query_detail_content"
        	            android:text="2015101000000000"
        	            />
        	        
        	    </LinearLayout>
        	    
        	    <ImageView android:layout_width="match_parent"
        	        android:layout_height="0.2dp"
        	        android:background="@color/blank_color"/>
        	    
        	    
        	    <LinearLayout android:layout_width="match_parent"
        	        android:layout_height="wrap_content"
        	        android:layout_marginTop="5dp"
        	        android:orientation="horizontal">
        	        
        	        <TextView 
        	            style="@style/textview_order_query_detail_ds"
        	            android:text="操作员："
        	            />
        	        
        	        <TextView 
        	            android:id="@+id/oper_name"
        	            style="@style/textview_order_query_detail_content"
        	            android:text="2015101000000000"
        	            />
        	        
        	    </LinearLayout>
        	    
        	    <ImageView android:layout_width="match_parent"
        	        android:layout_height="0.2dp"
        	        android:background="@color/blank_color"/>
        	    
        	    
        	    <LinearLayout android:layout_width="match_parent"
        	        android:layout_height="wrap_content"
        	        android:layout_marginTop="5dp"
        	        android:orientation="horizontal">
        	        
        	        <TextView 
        	            style="@style/textview_order_query_detail_ds"
        	            android:text="订单类别："
        	            />
        	        
        	        <TextView 
        	            android:id="@+id/status"
        	            style="@style/textview_order_query_detail_content"
        	            android:text="2015101000000000"
        	            />
        	        
        	    </LinearLayout>
        	    
        	    <ImageView android:layout_width="match_parent"
        	        android:layout_height="0.2dp"
        	        android:background="@color/blank_color"/>
        	    
        	    <LinearLayout android:layout_width="match_parent"
        	        android:layout_height="wrap_content"
        	        android:layout_marginTop="5dp"
        	        android:orientation="horizontal">
        	        
        	        <TextView 
        	            style="@style/textview_order_query_detail_ds"
        	            android:text="备注："
        	            />
        	        
        	        <TextView 
        	            android:id="@+id/remark"
        	            style="@style/textview_order_query_detail_content"
        	            android:text="2015101000000000"
        	            />
        	        
        	    </LinearLayout>
        	    
        	   
        	    
        	</LinearLayout>
        	
        </LinearLayout>
        
        
    </ScrollView>
    

</LinearLayout>
