<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:client="http://schemas.android.com/apk/res/com.ec2.yspay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/ll_main">
    <com.ec2.yspay.widget.MyTitle 
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        client:isShowLeft="true"
        client:titleName="密码重置"/>
	<ImageView android:layout_width="fill_parent"
	    android:layout_height="0.5dp"
	    android:src="@color/line_gray"/>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_marginLeft="18dp"
	    android:layout_marginRight="18dp"
	    android:layout_marginTop="25dp"
	    android:layout_marginBottom="20dp">
	    <TextView 
		    style="@style/textview_black1"
		    android:textSize="16dp"
		    android:text="旧密码："/>
	    <EditText 
	        android:id="@+id/et_pwd_old"
	        style="@style/editText_gray_style"
	        android:layout_marginTop="6dp"
	        android:hint="请输入旧密码"
	        android:inputType="textPassword"
	        android:layout_gravity="center_horizontal"/>
	    <TextView 
		    style="@style/textview_black1"
		    android:textSize="16dp"
		    android:layout_marginTop="12dp"
		    android:text="新密码："/>
	    <EditText 
	        android:id="@+id/et_pwd_new"
	        style="@style/editText_gray_style"
	        android:layout_marginTop="6dp"
	        android:inputType="textPassword"
	        android:hint="请输入新密码"
	        android:layout_gravity="center_horizontal"/>
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="30dp"
	        >
	        <TextView 
		    style="@style/textview_black1"
		    android:textSize="16dp"
		    android:layout_alignParentBottom="true"
		    android:text="确认密码："/>
	        <TextView 
		    style="@style/textview_red"
		    android:textSize="12dp"
		    android:textColor="@color/btn_text_red"
		    android:layout_alignParentRight="true"
		    android:layout_marginTop="8dp"
		    android:text="*至少6位数字或字母"/>
	    </RelativeLayout>
	    
	    <EditText 
	        android:id="@+id/et_pwd_sec"
	        style="@style/editText_gray_style"
	        android:layout_marginTop="6dp"
	        android:hint="请再次确认密码"
	        android:inputType="textPassword"
	        android:layout_gravity="center_horizontal"/>
	    
	    <Button 
	        android:id="@+id/btn_sure"
	        style="@style/btn_red636_style"
	        android:layout_marginTop="40dp"
	        android:text="确定"/>
	</LinearLayout>
	


</LinearLayout>

