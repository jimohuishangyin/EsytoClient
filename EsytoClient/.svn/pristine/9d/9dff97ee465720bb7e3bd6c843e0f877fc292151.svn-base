<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:client="http://schemas.android.com/apk/res/com.ec2.yspay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/ll_main">
    <com.ec2.yspay.widget.MyTitle 
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        client:isShowLeft="true"
        client:isShowRight="true"
        client:rightText="保存" 
        client:titleName="新增门店"/>
    <View 
	        style="@style/line_view_gray"/>
    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="54dp"
	        android:gravity="center_vertical"
	        android:background="@color/white"
	        android:paddingLeft="15dp"
	        android:paddingRight="10dp"
	        android:orientation="horizontal">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="门店名称"/>
	        <TextView 
	            android:id="@+id/tv_store_name"
	            style="@style/textview_personal_style"
	            android:singleLine="true"
	            android:hint="请输入门店名称"
	            android:textColorHint="@color/hint_gray_color"
	            android:text=""/>
	    </LinearLayout>
	    <View 
	        style="@style/line_view_gray"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="54dp"
	        android:background="@color/white"
	        android:paddingLeft="15dp"
	        android:paddingRight="10dp"
	        android:gravity="center_vertical"
	        android:orientation="horizontal">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="所在地"/>
	        <TextView 
	            android:id="@+id/tv_store_city"
	            style="@style/textview_personal_style"
	            android:singleLine="true"
	            android:hint="请输入所在地"
	            android:text=""/>
	    </LinearLayout>
	    <View 
	        style="@style/line_view_gray"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="54dp"
	        android:background="@color/white"
	        android:paddingLeft="15dp"
	        android:paddingRight="10dp"
	        android:gravity="center_vertical"
	        android:orientation="horizontal">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="详细地址"/>
	        <TextView 
	            android:id="@+id/tv_shop_address"
	            style="@style/textview_personal_style"
	            android:singleLine="true"
	            android:hint="请输入详细地址"
	            android:text=""/>
	    </LinearLayout>
	    
    <View 
	        style="@style/line_view_gray"/>
    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="54dp"
	        android:background="@color/white"
	        android:paddingLeft="15dp"
	        android:paddingRight="10dp"
	        android:gravity="center_vertical"
	        android:orientation="horizontal">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="联系电话"/>
	        <TextView 
	            android:id="@+id/tv_shop_phone"
	            style="@style/textview_personal_style"
	            android:singleLine="true"
	            android:hint="请输入联系电话"
	            android:text=""/>
	    </LinearLayout>
	    <View 
	        style="@style/line_view_gray"/>
    
    
</LinearLayout>
