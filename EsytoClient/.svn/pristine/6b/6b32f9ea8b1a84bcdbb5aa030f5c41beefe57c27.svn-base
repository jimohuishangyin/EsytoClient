<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:client="http://schemas.android.com/apk/res/com.ec2.yspay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
	<com.ec2.yspay.widget.MyTitle 
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        client:isShowLeft="true"
        client:titleName="付款"/>
	<LinearLayout 
        android:id="@+id/pay_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp">
        <ImageView 
            android:id="@+id/iv_payicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/weixinzf_logo96"/>
        <TextView 
            android:id="@+id/tv_paytitle"
            style="@style/textview_title_blue"
            android:text="微信支付"/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/ll_ordermsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginTop="20dp">
        <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	        <TextView 
	            style="@style/textview_gray"
	            android:text="交易号"/>
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_marginTop="@dimen/textgray_margin"
	            android:text="收银员"/>
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_marginTop="@dimen/textgray_margin"
	            android:text="门店"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dp"
	        android:orientation="vertical">
	        <TextView 
	            android:id="@+id/tv_orderId"
	            style="@style/textview_gray"
	            android:text="2894647"/>
	        <TextView 
	            android:id="@+id/tv_username"
	            style="@style/textview_gray"
	            android:layout_marginTop="@dimen/textgray_margin"
	            android:text=""/>
	        <TextView 
	            android:id="@+id/tv_shopname"
	            style="@style/textview_gray"
	            android:layout_marginTop="@dimen/textgray_margin"
	            android:text=""/>
	    </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/ll_yingshou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
	    <TextView 
	        style="@style/textview_black"
	        android:text="应收金额"/>
	    <TextView 
	        android:id="@+id/tv_money"
	        style="@style/textview_red"
	        android:layout_marginLeft="15dp"
	        android:text="153.02"/>
	</LinearLayout>
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/iv_code"/>
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
	    android:layout_marginTop="30dp"
	    android:layout_gravity="center_horizontal">
	    <TextView 
	        style="@style/textview_gray"
	        android:textSize="20dp"
	        android:text="请拍卡收款"/>
	    <ProgressBar
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="25dp"
           style="@android:style/Widget.ProgressBar.Inverse"    ></ProgressBar>
	</LinearLayout>
	<TextView style="@style/textview_black"
	    android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:text="或"/>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
	    android:layout_marginTop="30dp"
	    android:layout_marginLeft="@dimen/margin_left"
	    android:layout_marginRight="@dimen/margin_left"
	    android:layout_gravity="center_horizontal">
	    <EditText 
	        style="@style/editText_gray_style"
	        android:layout_weight="6"
	        android:hint="输入客户手机账户"/>
	    <Button style="@style/btn_blue450_style"
	        android:layout_width="100dp"
	        android:layout_weight="1"
	        android:layout_marginLeft="5dp"
	        android:text="确定"/>
	</LinearLayout>
</LinearLayout>
