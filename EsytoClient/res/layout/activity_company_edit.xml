<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:client="http://schemas.android.com/apk/res/com.ec2.yspay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <com.ec2.yspay.widget.MyTitle 
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        client:isShowLeft="true"
        client:titleName="商户信息"/>
    <LinearLayout 
        android:id="@+id/collect_ordermsg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_left"
        android:paddingRight="@dimen/margin_left">
        <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:gravity="center_vertical"
	        android:orientation="horizontal">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="企业名称"/>
	        <EditText 
	            android:id="@+id/et_company_name"
	            style="@style/textview_company_style"
	            android:singleLine="true"
	            android:text="大师傅"/>
	    </LinearLayout>
	    
	    <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:visibility="gone"
            android:background="@color/line_gray"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:visibility="gone"
	        android:gravity="center_vertical"
	        android:orientation="horizontal">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="联系人"/>
	        <EditText 
	            android:id="@+id/tv_user_name"
	            style="@style/textview_company_style"
	            android:singleLine="true"
	            android:text=""/>
	    </LinearLayout>
	    <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:gravity="center_vertical"
	        android:orientation="horizontal">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="联系人"/>
	        <EditText 
	            android:id="@+id/et_user_name"
	            style="@style/textview_company_style"
	            android:singleLine="true"
	            android:maxLength="8"
	            android:text=""/>
	    </LinearLayout>
	    <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:gravity="center_vertical"
	        android:orientation="horizontal">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="联系电话"/>
	        <EditText 
	            android:id="@+id/et_phone_num"
	            style="@style/textview_company_style"
	            android:singleLine="true"
	            android:maxLength="11"
	            android:text=""/>
	    </LinearLayout>
	    <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:gravity="center_vertical"
	        android:orientation="horizontal">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="地址"/>
	        <EditText 
	            android:id="@+id/et_company_addr"
	            style="@style/textview_company_style"
	            android:singleLine="true"
	            android:text=""/>
	    </LinearLayout>
	    <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:gravity="center_vertical"
	        android:orientation="horizontal">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="所在区域"/>
	        <TextView 
		            android:id="@+id/et_company_city"
		            style="@style/textview_personal_style"
		            android:singleLine="true"
		            android:text="福建/厦门"/>
	    </LinearLayout>
	    <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
    </LinearLayout>
    
   
	   
    <Button
        android:id="@+id/collect_pay"
        style="@style/btn_red636_style"
        android:layout_marginTop="40dp"
        android:text="保存"
        android:onClick="onclick_edit"/>
    
</LinearLayout>
