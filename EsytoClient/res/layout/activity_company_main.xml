<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:client="http://schemas.android.com/apk/res/com.ec2.yspay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_main"
    android:background="@color/white">
    <com.ec2.yspay.widget.MyTitle 
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        client:isShowLeft="true"
        client:titleName="商户信息"/>
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
        
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="153dp"
        android:orientation="horizontal"
        android:background="#eeeeee">
        <com.ec2.yspay.widget.RoundImageViewNoBorder
            android:id="@+id/iv_logo"
	        android:layout_width="90dp"
	        android:layout_height="90dp"
	        android:layout_centerInParent="true"
            android:layout_centerVertical="true"
        	android:src="@drawable/company_default_logo" 
            client:borderRadius="45dp"
            client:type="round" >
        </com.ec2.yspay.widget.RoundImageViewNoBorder>
    </RelativeLayout>
    <LinearLayout 
        android:id="@+id/collect_ordermsg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:gravity="center_vertical"
	        android:orientation="horizontal"
	        android:paddingLeft="@dimen/margin_left"
	        android:paddingRight="@dimen/margin_left">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="企业名称"/>
	        <TextView 
	            android:id="@+id/tv_company_name"
	            style="@style/textview_personal_style"
	            android:singleLine="true"
	            android:text=""/>
	    </LinearLayout>
	    <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:gravity="center_vertical"
	        android:orientation="horizontal"
	        android:paddingLeft="@dimen/margin_left"
	        android:paddingRight="@dimen/margin_left">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="企业号"/>
	        <TextView 
	            android:id="@+id/tv_company_num"
	            style="@style/textview_black1"
	            android:layout_width="fill_parent"
	            android:singleLine="true"
	            android:gravity="right"
	            android:layout_marginRight="24dp"
	            android:text=""/>
	        
	    </LinearLayout>
	    <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:gravity="center_vertical"
	        android:orientation="horizontal"
	        android:paddingLeft="@dimen/margin_left"
	        android:paddingRight="@dimen/margin_left">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="联系人"/>
	        <TextView 
	            android:id="@+id/tv_user_name"
	            style="@style/textview_personal_style"
	            android:singleLine="true"
	            android:text=""/>
	    </LinearLayout>
	    <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:gravity="center_vertical"
	        android:orientation="horizontal"
	        android:paddingLeft="@dimen/margin_left"
	        android:paddingRight="@dimen/margin_left">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="联系电话"/>
	        
	        <TextView 
	            android:id="@+id/tv_phone_num"
	            style="@style/textview_personal_style"
	            android:singleLine="true"
	            android:inputType="number"
	            android:maxLength="12"
	            android:text=""/>
	    </LinearLayout>
	    <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:gravity="center_vertical"
	        android:orientation="horizontal"
	        android:paddingLeft="@dimen/margin_left"
	        android:paddingRight="@dimen/margin_left">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="地址"/>
	        <TextView 
	            android:id="@+id/tv_company_addr"
	            style="@style/textview_personal_style"
	            android:singleLine="true"
	            android:text=""/>
	    </LinearLayout>
	    <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:gravity="center_vertical"
	        android:orientation="horizontal"
	        android:paddingLeft="@dimen/margin_left"
	        android:paddingRight="@dimen/margin_left">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="所在区域"/>
	        <TextView 
	            android:id="@+id/tv_company_city"
	            style="@style/textview_personal_style"
	            android:singleLine="true"
	            android:text=""/>
	    </LinearLayout>
	    <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
    </LinearLayout>
	   
    </LinearLayout>
    </ScrollView>
</LinearLayout>
