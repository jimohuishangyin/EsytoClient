<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:client="http://schemas.android.com/apk/res/com.ec2.yspay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<com.ec2.yspay.widget.MyTitle 
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        client:isShowLeft="true"
        client:titleName="撤销与退款"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:background="@color/white">
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/finished_icon_200_200"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="28dp"/>
	    <TextView 
	        android:id="@+id/tv_refund_succ"
	        style="@style/textview_green_style"
	        android:text="退款成功！"
	        android:layout_gravity="center_horizontal"
	        android:textStyle="bold"
	        android:layout_marginTop="12dp"/>
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:padding="@dimen/margin_14dp">
	        <TextView style="@style/textview_black3"
	            android:text="交易金额"/>
	        <TextView 
	            android:id="@+id/tv_amount"
	            style="@style/textview_blue_16_bold"
	            android:layout_alignParentRight="true"
	            android:text="￥1000.00"/>
	    </RelativeLayout>
	    <include layout="@layout/layout_gray_view"/>
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:padding="@dimen/margin_14dp"
	        >
	        <TextView style="@style/textview_black3"
	            android:textSize="14dp"
	            android:text="支付方式"/>
	        <TextView 
	            android:id="@+id/tv_channelType"
	            style="@style/textview_black1"
	            android:textSize="14dp"
	            android:layout_alignParentRight="true"
	            android:text=""/>
	    </RelativeLayout>
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="@dimen/margin_14dp"
	        android:paddingRight="@dimen/margin_14dp">
	        <TextView style="@style/textview_black3"
	            android:textSize="14dp"
	            android:text="交易流水号"/>
	        <TextView 
	            android:id="@+id/tv_orderid"
	            style="@style/textview_black1"
	            android:textSize="14dp"
	            android:layout_alignParentRight="true"
	            android:text=""/>
	    </RelativeLayout>
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:padding="@dimen/margin_14dp">
	        <TextView style="@style/textview_black3"
	            android:textSize="14dp"
	            android:text="交易时间"/>
	        <TextView 
	            android:id="@+id/tv_orderTime"
	            style="@style/textview_black1"
	            android:textSize="14dp"
	            android:layout_alignParentRight="true"
	            android:text=""/>
	    </RelativeLayout>
	    <View 
        	style="@style/line_view_gray"
        	android:layout_marginTop="10dp"/>
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:padding="@dimen/margin_14dp">
	        <TextView style="@style/textview_black3"
	            android:textSize="14dp"
	            android:text="备注信息"/>
	        <TextView 
	            android:id="@+id/tv_remark"
	            style="@style/textview_black1"
	            android:textSize="14dp"
	            android:layout_alignParentRight="true"
	            android:text=""/>
	    </RelativeLayout>
	    <View 
        	style="@style/line_view_gray"/>
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent">
			<LinearLayout android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:padding="@dimen/margin_14dp"
			    android:layout_alignParentBottom="true"
			    android:layout_marginBottom="15dp"
			    android:orientation="horizontal">
			    <com.ec2.yspay.widget.ButtonWhiteCenter 
			        android:id="@+id/btn_print"
			        android:layout_width="0dp"
			        android:layout_weight="1"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_horizontal"
			        client:btnContent="打印凭证"/>
			    <Button 
				    style="@style/btn_red636_style"
				    android:onClick="onclick_back"
				    android:layout_width="0dp"
				    android:layout_marginLeft="16dp"
			        android:layout_weight="1"
				    android:text="完成"/>
			</LinearLayout>
		</RelativeLayout>
	
	</LinearLayout>
	
</LinearLayout>