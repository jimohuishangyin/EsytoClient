<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
    <LinearLayout 
        android:id="@+id/ll_data"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffffff"
	    android:visibility="gone"
	    android:orientation="vertical" >
	    <TextView 
	        style="@style/textview_black1"
	        android:layout_width="wrap_content"
	        android:textSize="16dp"
	        android:layout_marginTop="20dp"
	        android:layout_marginBottom="1dp"
	        android:layout_marginLeft="@dimen/margin_14dp"
	        android:layout_marginRight="@dimen/margin_14dp"
	        android:text="支付方式：%"/>
	    <View 
	        style="@style/line_view_black"
	        android:layout_marginTop="4dp"
	        android:layout_marginBottom="8dp"
	        android:layout_marginLeft="@dimen/margin_14dp"
	        android:layout_marginRight="@dimen/margin_14dp"/>
    	<com.ec2.yspay.widget.MyGridView
    	    android:id="@+id/report_gridview"
    	    android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:horizontalSpacing="0.0dip"  
            android:listSelector="#00000000"  
            android:layout_marginLeft="@dimen/margin_14dp"
	        android:layout_marginRight="@dimen/margin_14dp"
            android:numColumns="3"  
            android:clickable="false"
            android:scrollbars="none"  
            android:stretchMode="columnWidth"  
            android:verticalSpacing="0.0dip"/>
    	<View 
	        android:layout_width="fill_parent"
	        android:layout_height="13dp"
	        android:background="@color/gray_bg_color"/>
    	<TextView 
	        style="@style/textview_black1"
	        android:layout_width="wrap_content"
	        android:textSize="16dp"
	        android:layout_marginTop="15dp"
	        android:layout_marginLeft="@dimen/margin_14dp"
	        android:layout_marginRight="@dimen/margin_14dp"
	        android:text="金额分布"/>
	    <View 
	        style="@style/line_view_black"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="13dp"
	        android:layout_marginLeft="@dimen/margin_14dp"
	        android:layout_marginRight="@dimen/margin_14dp"/>
	    <com.ec2.yspay.widget.MyCircleGroupChart
	        android:id="@+id/chart1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
	        android:layout_marginLeft="@dimen/margin_14dp"
	        android:layout_marginRight="@dimen/margin_14dp"/>
	    
	</LinearLayout>
	<LinearLayout 
        android:id="@+id/ll_nodata"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#ffffff"
	    android:visibility="gone"
	    android:orientation="vertical" >
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="30dp"
	        android:layout_gravity="center_horizontal"
	        android:src="@drawable/no_date_pic"/>
	</LinearLayout>
	<LinearLayout 
        android:id="@+id/ll_loading"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#ffffff"
	    android:orientation="vertical" >
	    <ProgressBar
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="40dp"
	        android:layout_gravity="center_horizontal"
           style="@android:style/Widget.ProgressBar.Inverse"></ProgressBar>
	    <TextView 
	        style="@style/textview_black1"
	        android:layout_marginTop="10dp"
	        android:layout_gravity="center_horizontal"
	        android:text="加载中..."/>
	</LinearLayout>
	</LinearLayout>
</ScrollView>