<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:client="http://schemas.android.com/apk/res/com.ec2.yspay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <com.ec2.yspay.widget.MyTitle 
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        client:isShowLeft="true"
        client:titleName="现金归集"/>
    <LinearLayout 
        android:id="@+id/pay_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rl_top"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp">
        <ImageView 
            android:id="@+id/collect_payicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/yzf_logo96"/>
        <TextView 
            android:id="@+id/collect_paytitle"
            style="@style/textview_title_blue"
            android:text="翼支付"/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/collect_ordermsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pay_title"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginTop="20dp">
        <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        
	        android:orientation="vertical">
	        <TextView 
	            style="@style/textview_gray"
	            android:visibility="gone"
	            android:text="交易号"/>
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_marginTop="@dimen/textgray_margin"
	            android:text="收银员"/>
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_marginTop="@dimen/textgray_margin"
	            android:text="门店"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dp"
	        
	        android:orientation="vertical">
	        <TextView 
	            style="@style/textview_gray"
	            android:visibility="gone"
	            android:text="2894647"/>
	        <TextView 
	            android:id="@+id/tv_username"
	            style="@style/textview_gray"
	            android:layout_marginTop="@dimen/textgray_margin"
	            android:text="罗洪祥"/>
	        <TextView 
	            android:id="@+id/tv_address"
	            style="@style/textview_gray"
	            android:layout_marginTop="@dimen/textgray_margin"
	            android:text="湖里万达"/>
	    </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/collect_yingshou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_below="@id/collect_ordermsg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
	    <TextView 
	        style="@style/textview_black"
	        android:text="金额"/>
	    <TextView 
	        android:id="@+id/tv_money"
	        style="@style/textview_red"
	        android:layout_marginLeft="15dp"
	        android:text="153.02"/>
	</LinearLayout>
	    <EditText
        android:id="@+id/collect_phone_nun"
        style="@style/text_register_input"
        android:layout_marginTop="30dp"
        android:background="@drawable/icon_register_input_bg"
        android:gravity="center"
        android:visibility="gone"
        android:hint="请输入登陆手机号／帐号"
	    android:layout_below="@id/collect_yingshou"
        android:textSize="@dimen/register_hind_textSize" />
    <Button
        android:id="@+id/collect_pay"
        style="@style/btn_red636_style"
        android:layout_marginTop="30dp"
        android:text="立即支付"
        android:layout_centerHorizontal="true"
	    android:layout_below="@id/collect_yingshou"/>
    
</RelativeLayout>
