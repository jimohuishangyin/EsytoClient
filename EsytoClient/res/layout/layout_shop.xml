<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_shop"
    android:layout_width="fill_parent"
    android:layout_height="44dp"
    android:paddingLeft="@dimen/margin_14dp"
    android:paddingRight="@dimen/margin_14dp"
    android:clickable="true"
    android:background="@drawable/touch_gray_bg">
    <TextView 
        style="@style/textview_black3"
        android:layout_centerVertical="true"
        android:text="门店"/>
    <ImageView 
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/arrow72_72"/>
    <TextView 
        android:id="@+id/tv_shopName"
        style="@style/textview_black1"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_arrow"
        android:text="全部"/>
</RelativeLayout>