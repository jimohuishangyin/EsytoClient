<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:client="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e9e9e9"
    android:orientation="vertical" >

    <com.ec2.yspay.widget.MyTitle
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        client:isShowLeft="true"
        client:titleName="个人信息设置" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="143dp"
                android:background="#eeeeee"
                android:orientation="horizontal" >

                <com.ec2.yspay.widget.HalfRoundImageView
                    android:id="@+id/iv_touxiang"
                    android:layout_width="94dp"
                    android:layout_height="94dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/default_portrait"
                    client:border_outside_color="@color/red_type1"
                    client:border_thickness="4dp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/collect_ordermsg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_left"
                    android:paddingRight="24dp" >

                    <TextView
                        style="@style/textview_gray"
                        android:layout_width="120dp"
                        android:text="昵称"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_user_nickname"
                        style="@style/textview_personal_style"
                        android:text="" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_gray" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_left"
                    android:paddingRight="24dp" >

                    <TextView
                        style="@style/textview_gray"
                        android:layout_width="120dp"
                        android:text="姓名"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_user_name"
                        style="@style/textview_personal_style"
                        android:text="" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_gray" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_left"
                    android:paddingRight="24dp" >

                    <TextView
                        style="@style/textview_gray"
                        android:layout_width="120dp"
                        android:text="二维码名片"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/iv_ewm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ewm_72_72" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_left"
                    android:paddingRight="24dp" >

                    <TextView
                        style="@style/textview_gray"
                        android:layout_width="120dp"
                        android:text="性别"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_user_sex"
                        style="@style/textview_personal_style"
                        android:text="" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_gray" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_left"
                    android:paddingRight="24dp" >

                    <TextView
                        style="@style/textview_gray"
                        android:layout_width="120dp"
                        android:text="家乡"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_user_home_addr"
                        style="@style/textview_personal_style"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_gray" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_left"
                    android:paddingRight="24dp" >

                    <TextView
                        style="@style/textview_gray"
                        android:layout_width="120dp"
                        android:text="生日"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_user_birthday"
                        style="@style/textview_personal_style"
                        android:text="" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_left"
                    android:paddingRight="24dp" >

                    <TextView
                        style="@style/textview_gray"
                        android:layout_width="120dp"
                        android:text="手机号"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_user_num"
                        style="@style/textview_black1"
                        android:text="" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_gray" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_left"
                    android:paddingRight="24dp" >

                    <TextView
                        style="@style/textview_gray"
                        android:layout_width="120dp"
                        android:text="重设密码"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/btn_update_pwd"
                        style="@style/textview_personal_style"
                        android:text="" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_gray" />

                
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>