<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:client="http://schemas.android.com/apk/res/com.ec2.yspay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/ll_main">
    <com.ec2.yspay.widget.MyTitle 
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        client:isShowLeft="true"
        client:isShowRight="true"
        client:rightText="保存"
        client:titleName="员工信息"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:gravity="center_vertical"
	        android:orientation="horizontal"
	        android:paddingLeft="@dimen/margin_left"
	        android:paddingRight="@dimen/margin_left">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="姓名"/>
	        <TextView 
	            android:id="@+id/tv_name"
	            style="@style/textview_personal_style"
	            android:singleLine="true"
	            android:text=""/>
	    </LinearLayout>
	    <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:gravity="center_vertical"
	        android:orientation="horizontal"
	        android:paddingLeft="@dimen/margin_left"
	        android:paddingRight="@dimen/margin_left">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="手机号码"/>
	        <TextView 
	            android:id="@+id/tv_num"
	            style="@style/textview_black1"
	            android:layout_width="fill_parent"
	            android:singleLine="true"
	            android:gravity="right"
	            android:layout_marginRight="24dp"
	            android:text=""/>
	        
	    </LinearLayout>
	    <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:gravity="center_vertical"
	        android:orientation="horizontal"
	        android:paddingLeft="@dimen/margin_left"
	        android:paddingRight="@dimen/margin_left">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="所在门店"/>
	        <TextView 
	            android:id="@+id/tv_shop_name"
	            style="@style/textview_personal_style"
	            android:singleLine="true"
	            android:text=""/>
	    </LinearLayout>
	    <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:gravity="center_vertical"
	        android:orientation="horizontal"
	        android:paddingLeft="@dimen/margin_left"
	        android:paddingRight="@dimen/margin_left">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="员工类型"/>
	        <TextView 
	            android:id="@+id/tv_duty"
	            style="@style/textview_personal_style"
	            android:singleLine="true"
	            android:text=""/>
	    </LinearLayout>
	    <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:gravity="center_vertical"
	        android:orientation="horizontal"
	        android:paddingLeft="@dimen/margin_left"
	        android:paddingRight="@dimen/margin_left">
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_width="120dp"
	            android:textSize="16dp"
	            android:text="账号状态"/>
	        <TextView 
	            android:id="@+id/tv_status"
	            style="@style/textview_personal_style"
	            android:singleLine="true"
	            android:text=""/>
	    </LinearLayout>
	    <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
        <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">
	        <LinearLayout 
	            android:id="@+id/ll_buttom"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:orientation="vertical">
	            <!--  Button 
	                android:id="@+id/btn_addstaff"
	                style="@style/btn_red636_style"
	                android:layout_marginTop="12dp"
	                android:text="保存"/-->
	            <Button 
	                android:id="@+id/btn_reset_pwd"
	                style="@style/btn_red636_style"
	                android:layout_marginTop="16dp"
	                android:visibility="gone"
	                android:text="重置密码"/>
	            <Button 
	                android:id="@+id/btn_addstaff_send"
	                style="@style/btn_red636_style"
	                android:layout_marginTop="56dp"
	                android:layout_marginBottom="5dp"
	                android:text="删除员工"/>
	        </LinearLayout>
	        
	    </RelativeLayout>
    
</LinearLayout>
