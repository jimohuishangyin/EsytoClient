<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:client="http://schemas.android.com/apk/res/com.ec2.yspay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<com.ec2.yspay.widget.MyTitle 
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        client:isShowLeft="true"
        client:titleName="撤销与退款"/>
	<ScrollView 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	    
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:background="@color/white">
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:layout_marginBottom="15dp"
	        android:padding="@dimen/margin_14dp">
	        <TextView style="@style/textview_black3"
	            android:text="交易金额"/>
	        <TextView 
	            android:id="@+id/tv_amount"
	            style="@style/textview_blue_16_bold"
	            android:layout_alignParentRight="true"
	            android:text=""/>
	    </RelativeLayout>
	    <include layout="@layout/layout_gray_view"/>
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:padding="@dimen/margin_14dp"
	        >
	        <TextView style="@style/textview_black3"
	            android:textSize="14dp"
	            android:text="支付方式"/>
	        <TextView 
	            android:id="@+id/tv_channelType"
	            style="@style/textview_black1"
	            android:textSize="14dp"
	            android:layout_alignParentRight="true"
	            android:text=""/>
	    </RelativeLayout>
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="@dimen/margin_14dp"
	        android:paddingRight="@dimen/margin_14dp">
	        <TextView style="@style/textview_black3"
	            android:textSize="14dp"
	            android:text="交易流水号"/>
	        <TextView 
	            android:id="@+id/tv_orderid"
	            style="@style/textview_black1"
	            android:textSize="14dp"
	            android:layout_alignParentRight="true"
	            android:text=""/>
	    </RelativeLayout>
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:padding="@dimen/margin_14dp">
	        <TextView style="@style/textview_black3"
	            android:textSize="14dp"
	            android:text="交易时间"/>
	        <TextView 
	            android:id="@+id/tv_orderTime"
	            style="@style/textview_black1"
	            android:textSize="14dp"
	            android:layout_alignParentRight="true"
	            android:text=""/>
	    </RelativeLayout>
	    <View 
        	style="@style/line_view_gray"
        	android:layout_marginTop="10dp"/>
	        
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:padding="@dimen/margin_14dp"
	        android:orientation="horizontal">
		    <ImageView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/remark_icon"/>
	        <TextView 
	            android:id="@+id/tv_refund_ramark"
		        style="@style/textview_black"
		        android:layout_marginLeft="5dp"
		        android:layout_gravity="center_vertical"
		        android:text="退款备注"/>
	    </LinearLayout>
	    
	   <EditText 
	        android:id="@+id/et_refund_beizhu"
	        style="@style/editText_gray_style"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:paddingLeft="12dp"
	        android:paddingRight="12dp"
	        android:layout_marginTop="8dp"
	        android:textColorHint="@color/hint_gray_color"
	        android:background="@null"
	        android:hint="请输入撤销备注内容"/>
	    <View 
        	style="@style/line_view_gray"
        	android:layout_marginTop="10dp"/>
	    <Button 
	        style="@style/btn_blue_big_style"
	        android:layout_marginTop="45dp"
	        android:onClick="onclick_sure"
	        android:text="确定退款"
	        android:id="@+id/btn_refund"/>
	</LinearLayout>
	</ScrollView>
</LinearLayout>