<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:client="http://schemas.android.com/apk/res/com.ec2.yspay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <com.ec2.yspay.widget.MyTitle 
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        client:isShowLeft="true"
        client:titleName="付款"/>
    <LinearLayout 
        android:id="@+id/pay_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rl_top"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp">
        <ImageView 
            android:id="@+id/iv_payicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/weixinzf_logo96"/>
        <TextView 
            android:id="@+id/tv_paytitle"
            style="@style/textview_title_blue"
            android:text="微信支付"/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/ll_ordermsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pay_title"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginTop="20dp">
        <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        
	        android:orientation="vertical">
	        <TextView 
	            style="@style/textview_gray"
	            android:visibility="gone"
	            android:text="交易号"/>
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_marginTop="@dimen/textgray_margin"
	            android:text="收银员"/>
	        <TextView 
	            style="@style/textview_gray"
	            android:layout_marginTop="@dimen/textgray_margin"
	            android:text="门店"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dp"
	        
	        android:orientation="vertical">
	        <TextView 
	            style="@style/textview_gray"
	            android:visibility="gone"
	            android:text="2894647"/>
	        <TextView 
	            android:id="@+id/tv_username"
	            style="@style/textview_gray"
	            android:layout_marginTop="@dimen/textgray_margin"
	            android:text=""/>
	        <TextView 
	            android:id="@+id/tv_shopname"
	            style="@style/textview_gray"
	            android:layout_marginTop="@dimen/textgray_margin"
	            android:text=""/>
	    </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/ll_yingshou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_below="@id/ll_ordermsg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
	    <TextView 
	        style="@style/textview_black"
	        android:text="应收金额"/>
	    <TextView 
	        android:id="@+id/tv_money"
	        style="@style/textview_black"
	        android:layout_marginLeft="15dp"
	        android:text="153.02"/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_below="@id/ll_yingshou"
	    android:layout_marginTop="35dp"
	    android:layout_margin="@dimen/margin_left">
	    <com.ec2.yspay.widget.PayLinearLayoutButton 
	        android:id="@+id/llbtn_paika"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="25dp"
	        client:btnContent="号码支付或拍卡"
	        client:btnIcon="@drawable/icon_paika"
	        android:visibility="gone"
	        client:btnIconPessed="@drawable/icon_paika_over"/>
	    <com.ec2.yspay.widget.PayLinearLayoutButton 
	        android:id="@+id/llbtn_saoma"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="18dp"
	        client:btnContent="扫用户支付宝二维码"
	        client:btnIcon="@drawable/icon_saoma"
	        client:btnIconPessed="@drawable/icon_saoma_over"/>
	    <com.ec2.yspay.widget.PayLinearLayoutButton 
	        android:id="@+id/llbtn_qrcode"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="18dp"
	        client:btnContent="展示二维码"
	        client:btnIcon="@drawable/icon_eweima"
	        client:btnIconPessed="@drawable/icon_eweima_over"/>
	    <com.ec2.yspay.widget.PayLinearLayoutButton 
	        android:id="@+id/llbtn_share"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="18dp"
	        client:btnContent="分享付款"
	        android:visibility="gone"
	        client:btnIcon="@drawable/icon_fenxiang"
	        client:btnIconPessed="@drawable/icon_fenxiang_over"/>
	</LinearLayout>
    
</RelativeLayout>
